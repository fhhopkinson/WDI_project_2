<h2>New</h2>
<% @artist.errors.full_messages.each do |error| %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= error %>
  </div>
<% end %>
<form id="register" method="post" action="/artists">
  <div class="form-group">
    <label for="username">Full Name</label>
    <input name="artist[username]" type="text" class="form-control" id="username" placeholder="Username">
  </div>
  <div class="form-group">
    <label for="email">Email address</label>
    <input name="artist[email]" type="email" class="form-control" id="email" placeholder="Email">
  </div>
 <button type="submit" class="btn btn-default">Create</button>
</form>
