<h2>Register</h2>
<% @artist.errors.full_messages.each do |error| %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= error %>
  </div>
<% end %>
<form id="register" method="post" action="/register" enctype="multipart/form-data">
  <div class="form-group">
    <label for="username">Full Name</label>
    <input name="artist[username]" type="text" class="form-control" id="username" placeholder="Full Name" ">
  </div>
  <div class="form-group">
    <label for="email">Email address</label>
    <input name="artist[email]" type="email" class="form-control" id="email" placeholder="Email">
  </div>
  <div class="form-group">
    <label for="bio">Biography</label>
    <textarea name="artist[bio]" type="bio" class="form-control" id="bio" placeholder="Bio"></textarea> 
  </div>
  <div class="form-group">
    <label for="profile_pic">Profile Pic</label>
    <input name="artist[profile_pic]" type="file" class="form-control" id="profile_pic" placeholder="Profile Pic">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input name="artist[password]" type="password" class="form-control" id="password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default">Sign up</button>
</form>